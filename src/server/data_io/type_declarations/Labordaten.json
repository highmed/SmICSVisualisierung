{
  "$id": "data/Labordaten",
  "$schema": "http://json-schema.org/schema#",
  "type": "array",
  "uniqueItems": true,
  "description": "for both viruses and bacteria",
  "items": {
    "type": "object",
    "properties": {
      "id": {
        "type": "string"
      },
      "AntibiogrammID": {
        "oneOf": [
          {
            "type": "string"
          },
          {
            "type": "null"
          }
        ]
      },
      "PatientID": {
        "type": "string"
      },
      "FallID": {
	"oneOf": [
	  {
	    "type": "string"
	  },
	  {
	    "type": "null"
	  }
	]
      },
      "ResultatID": {
        "type": "string"
      },
      "ProbeID": {
        "type": "string"
      },
      "Auftragsdatum": {
        "type": "string",
        "description": "der Zeitpunkt, an dem die Probenuntersuchung in Auftrag gegeben wurde; siehe ZeitpunktProbenentnahme",
        "moment": {
          "validate": [
            {
              "test": "isSameOrAfter",
              "value": "1980-01-01T00:00:00Z"
            },
            {
              "test": "isSameOrBefore",
              "value": "2100-01-01T00:00:00Z"
            }
          ]
        }
      },
      "Eingangsdatum": {
        "type": "string",
        "description": "der Zeitpunkt, an dem die Probe beim Untersucher eintraf; siehe ZeitpunktProbenentnahme",
        "moment": {
          "validate": [
            {
              "test": "isSameOrAfter",
              "value": "1980-01-01T00:00:00Z"
            },
            {
              "test": "isSameOrBefore",
              "value": "2100-01-01T00:00:00Z"
            }
          ]
        }
      },
      "ZeitpunktProbenentnahme": {
        "type": "string",
        "description": "der Zeitpunkt, and dem die Probe entnommen wurde (also z.B. der Abstrich durchgeführt wurde); keine der drei datumsangaben ist verpflichtend, da unterschiedliche Datenquellen diese in unterschiedlicher vollständigkeit und Semantik (aufgrund unterschiedlicher Eintragungsgewohnheiten) bereitstellen; die formale validierung behandelt sie als unabhängig",
        "moment": {
          "validate": [
            {
              "test": "isSameOrAfter",
              "value": "1980-01-01T00:00:00Z"
            },
            {
              "test": "isSameOrBefore",
              "value": "2100-01-01T00:00:00Z"
            }
          ]
        }
      },
      "MREKlasseID": {
        "oneOf": [
          {
            "type": "string"
          },
          {
            "type": "null"
          }
        ]
      },
      "MREKlasse": {
        "oneOf": [
          {
            "type": "string"
          },
          {
            "type": "null"
          }
        ]
      },
      "Probenart": {
        "type": "string",
        "description": "blood sample, swap, etc."
      },
      "Körperstelle": {
        "type": "string"
      },
      "Screening": {
        "type": "boolean"
      },
      "Befund": {
        "type": "boolean",
        "description": "false == kein Erreger gefunden (KeinID ist 'not available') / true == etwas gefunden (siehe dann Keim ID)"
      },
      "Befundkommentar": {
        "oneOf": [
          {
            "type": "string"
          },
          {
            "type": "null"
          }
        ]
      },
      "KeimID": {
        "oneOf": [
          {
            "type": "string"
          },
          {
            "type": "null"
          }
        ]
      },
      "Keim_l": {
        "type": "string",
        "minLength": 0
      },
      "Keim_k": {
        "type": "string",
        "minLength": 1,
        "maxLength": 10
      },
      "AntibiotikumID": {
        "oneOf": [
          {
            "type": "string"
          },
          {
            "type": "null"
          }
        ]
      },
      "Antibiotikum_l": {
        "type": "string",
        "minLength": 1
      },
      "Antibiotikum_k": {
        "type": "string",
        "minLength": 1,
        "maxLength": 10
      },
      "ErgebnisID": {
        "oneOf": [
          {
            "type": "string"
          },
          {
            "type": "null"
          }
        ]
      },
      "Ergebnis_l": {
        "type": "string",
        "minLength": 1
      },
      "Ergebnis_k": {
        "type": "string",
        "minLength": 1,
        "maxLength": 10
      },
      "Viruslast": {
        "type": "string"
      }
    },
    "required": [
      "PatientID",
      "FallID",
      "ProbeID",
      "Probenart",
      "Befund",
      "KeimID",
      "Viruslast"
    ],
    "anyOf": [
      {
        "required": [
          "Auftragsdatum"
        ]
      },
      {
        "required": [
          "Eingangsdatum"
        ]
      },
      {
        "required": [
          "ZeitpunktProbenentnahme"
        ]
      }
    ]
  }
}
